        <TabItem Header="Source">
            <ListView x:Name="sourceList" ItemsSource="{Binding Source}" Margin="0,0,-0,-0" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="300" DisplayMemberBinding="{Binding DirInfo.Name}">
                            <GridViewColumnHeader Tag="Source" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Name"/>
                        </GridViewColumn>
                        <GridViewColumn  Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right" Text="{Binding SizeString}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Tag="Source" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Size"/>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Store" Command="{Binding StoreCommand}" CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem Header="Storage">
            <ListView x:Name="storageList" ItemsSource="{Binding Stored}" Margin="0,0,0,0" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn  DisplayMemberBinding="{Binding DirInfo.Name}" Width="300">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Stored" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Name"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right" Text="{Binding SizeString}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Stored" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Size"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Restore" Command="{Binding StoreCommand}"  CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem Header="Unlinked" Visibility="{Binding ShowUnlinkedFolders, Converter={StaticResource BoolToVis}}" >
            <ListView x:Name="unlinkedList" ItemsSource="{Binding Unlinked}" Grid.Column="1" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn  DisplayMemberBinding="{Binding DirInfo.Name}" Width="300">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Unlinked" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Name"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right" Text="{Binding SizeString}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Unlinked" Command="{Binding HeaderClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Size"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Link" Command="{Binding LinkCommand}" CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem Header="Duplicate" Visibility="{Binding ShowDuplicateFolders, Converter={StaticResource BoolToVis}}">
            <ListView x:Name="duplicateList" ItemsSource="{Binding DuplicateFolders}" Margin="0,0,0,0" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn  DisplayMemberBinding="{Binding}" Width="250">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="DirInfo.Name" Content="Duplicate"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem Header="All">
            <ListView x:Name="allList" ItemsSource="{Binding FolderManager.Folders}" Margin="0,0,-0,-0" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding DirInfo.FullName}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Name"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Status}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Status"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Mapping}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Mapping"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Ass.Mode}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Mode"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding ReturnStatus}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="ReturnStatus"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Ass.Source.FullName}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Assignment Source"/>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Ass.Target.FullName}">
                            <GridViewColumnHeader Tag="DirInfo.Name" Content="Assignment Target"/>
                        </GridViewColumn>
                        <GridViewColumn  Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right" Text="{Binding SizeString}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Tag="DirSize" Content="Size"/>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>
    </TabControl>

</UserControl>
