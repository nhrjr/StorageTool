<Window x:Class="StorageTool.MainWindow"
        x:Name="StorageToolMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageTool"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown_Main"
        Closing="OnClosing"
        Closed="OnClosed"
        Title="StorageTool"
        SizeToContent="WidthAndHeight"
        Background="White"
        >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <DockPanel Height="694">

        <Expander Header="Manage Profiles" Margin="7,7,7,7" DockPanel.Dock="Top">
            <local:ProfileManageView DataContext="{Binding ProfileManagerViewModel}"/>
        </Expander>

        <TabControl ItemsSource="{Binding DisplayViewModels}" SelectedValue="{Binding ProfileViewModel.ActiveProfile, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="Profile" Margin="7,7,7,7" Padding="0" BorderThickness="0" DockPanel.Dock="Top">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border x:Name="Panel" CornerRadius="4" BorderThickness="1" Background="{x:Null}" BorderBrush="Black" Margin="10,0,0,5" Tag="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow, AncestorLevel=1}, Path=DataContext}">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        MinWidth="60"
                                        Margin="5,2"
                                        />
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Open Source Folder" Command="{Binding PlacementTarget.Tag.OpenExplorerCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}" CommandParameter="Source"/>
                                            <MenuItem Header="Open Storage Folder" Command="{Binding PlacementTarget.Tag.OpenExplorerCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}" CommandParameter="Storage"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                </Border>
                                <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Panel" Property="TextBlock.FontWeight" Value="Bold" />
                                            <Setter TargetName="Panel" Property="Background" Value="{DynamicResource ForeGroundBlue}" />
                                            <Setter TargetName="Panel" Property="TextBlock.Foreground" Value="White" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Panel" Property="TextBlock.FontWeight" Value="Bold" />
                                        <Setter TargetName="Panel" Property="Background" Value="LightGray" />
                                        <Setter TargetName="Panel" Property="TextBlock.Foreground" Value="#666666" />
                                        </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </TabControl.Resources>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Profile.ProfileName}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <local:FolderManagerView DataContext="{Binding}" VerticalAlignment="Stretch"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <local:MovePanel Margin="7,7,7,7" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
