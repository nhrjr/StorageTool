<Window x:Class="StorageTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageTool"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown_Main"
        Title="StorageTool"
        Height="700"
        Width="600"
        MinHeight="700"
        MinWidth="600"
        Background="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="98"/>
            <RowDefinition/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!--PROFILE SELECTOR-->
        <!--<ComboBox x:Name="profileBox" ItemsSource="{Binding ProfileViewModel.Profiles}" SelectedItem="{Binding ProfileViewModel.ActiveProfile}" DisplayMemberPath="ProfileName" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="227" Height="22"/>-->
        <Button x:Name="removeProfile"  Content="Remove selected profile" Command="{Binding ProfileViewModel.RemoveSelectedCommand}" HorizontalAlignment="Left" Margin="232,10,0,0" VerticalAlignment="Top" Width="137" Height="22"/>
        <Button x:Name="openProfileInputDialogue" Content="Add new profile" Command="{Binding OpenProfileInputDialogCommand}" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="122" Height="22"/>

        <Button x:Name="Desc_StorageFolder" Command="{Binding OpenExplorerCommand}" CommandParameter="{Binding ProfileViewModel.ActiveProfile.StorageFolder.FullName}" HorizontalAlignment="Left" Padding="5,1,1,0" Margin="323,64,0,0" Content="Open" Width="46" Height="20" VerticalAlignment="Top"/>
        <Button x:Name="Desc_GameFolder" Command="{Binding OpenExplorerCommand}" CommandParameter="{Binding ProfileViewModel.ActiveProfile.GameFolder.FullName}" HorizontalAlignment="Left" Padding="5,1,1,0" Content="Open" Width="46" Height="20" VerticalAlignment="Top" Margin="323,39,0,0"/>
        <TextBox x:Name="gameFolderName" Foreground="Gray" Padding="5,1,1,0" TextWrapping="Wrap" Text="{Binding ProfileViewModel.ActiveProfile.GameFolder.FullName, Mode=OneWay}" IsReadOnly="True" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="213" Margin="105,39,0,0"/>
        <TextBox x:Name="storageFolderName" Foreground="Gray" Padding="5,1,1,0" TextWrapping="Wrap" Text="{Binding ProfileViewModel.ActiveProfile.StorageFolder.FullName, Mode=OneWay}" IsReadOnly="True" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="213" Margin="105,64,0,0"/>
        <TextBlock x:Name="label_SourceFolder" HorizontalAlignment="Left" Padding="5,1,1,0" Height="20" Margin="10,39,0,0" TextWrapping="Wrap" Text="Source Folder:" VerticalAlignment="Top" Width="90"/>
        <TextBlock x:Name="label_StorageFolder" HorizontalAlignment="Left" Padding="5,1,1,0" Margin="10,64,0,0" TextWrapping="Wrap" Text="Storage Folder:" VerticalAlignment="Top" Height="20" Width="90"/>

        <TabControl Grid.Row="1" ItemsSource="{Binding DisplayViewModels}" SelectedValue="{Binding ProfileViewModel.ActiveProfile, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Profile" Margin="7" Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        MinWidth="60"
                                        Margin="10,2"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Profile.ProfileName}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <local:FolderManagerView DataContext="{Binding}" VerticalAlignment="Stretch"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>


        <!--MOVEPANE-->
        <!--<TextBlock x:Name="currentCopiedFile" Margin="10,20,263,0" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Messages.CurrentFile}" VerticalAlignment="Top" Background="White" Height="20"/>-->
        <!--<Button x:Name="pauseQueue" Command="{Binding PauseAllCommand}" Content="Pause All" HorizontalAlignment="Right" Margin="0,20,93,0" Grid.Row="2" Width="75" Height="20" VerticalAlignment="Top"/>-->
        <!--<Button x:Name="cancelAll" Command="{Binding CancelAllCommand}" Content="Cancel All" Margin="0,20,13,0" Grid.Row="2" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Top"/>-->
        <Button x:Name="refresh" Content="Refresh" Command="{Binding ActiveDisplayViewModel.RefreshCommand}" Margin="0,63,10,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Right" Width="60"/>
        <!--<Button x:Name="deleteHistory" Content="Clear History" Margin="0,20,173,0" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Width="85" Height="20"/>-->

        <ListView x:Name="Move_Queue" ItemsSource="{Binding Assigned}" Margin="7" Grid.Row="2">
            <!--<ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>-->
            <ListView.View>
                <GridView>

                    <GridViewColumn Width="150" Header="Name" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Left" Text="{Binding DirInfo.Name}" >
                                    <TextBlock.ToolTip>
                                        <TextBlock Text="{Binding Action}"/>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="80" Header="Status" DisplayMemberBinding="{Binding Status}"/>

                    <GridViewColumn Width="100"  Header="Progress">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Height="10" Maximum="100" Value="{Binding Progress}" HorizontalContentAlignment="Stretch">
                                    <ProgressBar.ToolTip>
                                        <TextBlock Text="{Binding ProcessedBitsString}"/>
                                    </ProgressBar.ToolTip>
                                </ProgressBar>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="80"  Header="Size">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding SizeString}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ToggleButton Name="CancelButton" Command="{Binding PauseCommand}">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Paused}" Value="False">
                                                    <Setter Property="Content" Value="Pause"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Paused}" Value="True">
                                                    <Setter Property="Content" Value="Resume"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Window>
